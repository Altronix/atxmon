{
  "compilerOptions": {
    "types": ["reflect-metadata", "node"],
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
